<Window x:Class="PDF_Splitter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDF_Splitter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="407*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Label Content="Drop files here" HorizontalAlignment="Center" Grid.Row="0" Width="88"/>
        <WrapPanel Name="ImagePanel" Drop="ImagePanel_Drop" AllowDrop="true" Background="Gray" Grid.Row="1">

        </WrapPanel>

        <Button Height="40" Width="400" Grid.Row="2" Click="Start_Click">Разобрать</Button>
    </Grid>
</Window>
